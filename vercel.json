{
  "buildCommand": "npm run build && npm run build-storybook",
  "outputDirectory": ".next",
  "rewrites": [
    { "source": "/storybook", "destination": "/storybook/index.html" },
    { "source": "/storybook/:path*", "destination": "/storybook/:path*" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },
    { "src": "storybook/**", "use": "@vercel/static" }
  ]
} 